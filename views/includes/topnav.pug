.header.clearfix
  nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
    .container
      a.navbar-brand(href="/")#logo Eventbrite
      button.navbar-toggler(type="button", class="btn btn-link" data-toggle="collapse", data-target="#navbarsExampleDefault", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon

      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href="/questions")#navitem BROWSE EVENTS
          if (!currentUser) 
            li.nav-item
              a.nav-link(href='/signin')#navitem SIGN IN
            li.nav-item
              a.nav-link(href='/users/new')#navitem SIGN UP
          else
            li.nav-item
              a.nav-link(href=`/users/${currentUser._id}`)#navitem MY PROFILE
            li.nav-item
              a.nav-link(href='/signout')#navitem SIGN OUT
          li.nav-item
            a.nav-link(href="/questions")#navitem CREATE EVENT
    